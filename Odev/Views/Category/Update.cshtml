@model CategoriesVM
@{
    ViewData["Title"] = "Category Update";
    Layout = "_Layout2";
}
<form asp-action="Update">
    <div class="mb-4">
        <label asp-for="Categories.CategoryName" class="form-label">Category Name</label>
        <input type="text" class="form-control" asp-for="Categories.CategoryName" />
    </div>
    <div class="mb-4">
        <label asp-for="Categories.CategoryDescription" class="form-label">Category Description</label>
        <input type="text" class="form-control" asp-for="Categories.CategoryDescription" />
    </div>
    <div>
        <button type="submit" class="btn btn-outline-primary mt-3">Update</button>
    </div>
</form>
<br />
<div>
    <a asp-action="GetCategory" asp-controller="Category" class="btn btn-outline-dark">Back</a>
</div>