@model MoviesVM
@{
    ViewData["Title"] = "Movies";
    Layout = "_Layout2";
}
@if(TempData["result"]!=null)
{
    <div class="alert alert-success">@TempData["result"]</div>
}
<hr />
<br />
<a asp-action="Create" asp-controller="Movie" ><i class="fa-solid fa-plus text-primary fa-2x"></i></a>
<table class="table table-hover table-bordered caption-top">
    <caption>List of Movies</caption>
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(m=>m.Movies.MovieName)</th>
            <th>@Html.DisplayNameFor(m=>m.Movies.IsVision)</th>
            <th>@Html.DisplayNameFor(m=>m.Movies.MovieDescription)</th>
            <th>@Html.DisplayNameFor(m=>m.Movies.ReleaseDate)</th>
            <th>@Html.DisplayNameFor(m=>m.Movies.MovieCategory.CategoryName)</th>
            <th>Details</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.movieList)
        {
            <tr>
                <td>@item.MovieName</td>
                <td>@item.IsVision</td>
                <td>@item.MovieDescription</td>
                <td>@item.ReleaseDate</td>
                <td>@item.CategoryName</td>
                <td class="text-center">
                    <a asp-action="Detail" asp-controller="Movie" asp-route-id="@item.MovieID">
                        <i class="fa-solid fa-circle-info text-secondary"></i>
                    </a>
                </td>
                <td class="text-center">
                    <a asp-action="Update" asp-controller="Movie" asp-route-id="@item.MovieID">
                        <i class="fa-solid fa-pencil text-info"></i>
                    </a>
                </td>
                <td class="text-center">
                    <a asp-action="Delete" asp-controller="Movie" asp-route-id="@item.MovieID">
                        <i class="fa-solid fa-trash text-danger"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Index" asp-controller="Home" class="btn btn-outline-dark">Back</a>
</div>

